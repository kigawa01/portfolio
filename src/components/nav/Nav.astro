---
import ButtonSecondary from "./NavButton.astro";
import NavButton from "./NavButton.astro";
---
<div class="nav-wrapper">
  <nav>
    <h1>kigawa's portfolio</h1>
    <ul>
      <NavButton title="profile"/>
      <NavButton title="skill"/>
      <NavButton title="experience"/>
      <NavButton title="products"/>
    </ul>
  </nav>
</div>
<style>
  .nav-wrapper {
    height: 100vh;
    padding: 10px 0 10px 10px;
    width: 500px;
    box-sizing: border-box;
    display: flex;
  }
  nav {
    background-color: var(--mcolor-secondary-container);
    color: var(--mcolor-on-secondary-container);
    width: 100%;
    border-radius: 8px;
    border: 2px solid var(--mcolor-outline);
    padding: 25px;
  }
  ul {
    font-size: 1.5rem;
  }
</style>