---
import MainScroll from "./MainScroll.astro";
---
<div class="main-wrapper">
  <main>
    <MainScroll/>
  </main>
</div>
<style>
  .main-wrapper {
    height: 100vh;
    padding: 10px ;
    width: 500px;
    box-sizing: border-box;
    display: flex;
    flex: 1;
  }
  main {
    background-color: var(--mcolor-surface-container);
    width: 100%;
    border-radius: 8px;
    border: 2px solid var(--mcolor-outline);
    padding: 0 10px;
  }
</style>