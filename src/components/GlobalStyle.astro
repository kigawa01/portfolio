---
import Theme from "./Theme.astro";
---
<Theme/>

<style is:global>
  @font-face {
    font-family: "DistantGalaxy";
    src: url("/font/UDEVGothic_v1-3-1/UDEVGothicJPDOC-Bold.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  body {
    background-color: var(--mcolor-surface);
    padding: 0;
    font-family: "DistantGalaxy", sans-serif;
    line-height: 1.2;
    min-height: 100vh;
  }
  p, div {
    width: fit-content;
  }
  div {
    padding: 20px;
  }
  h2 {
    font-size: 2rem;
  }
  body, h2 {
    margin: 0;
  }
</style>