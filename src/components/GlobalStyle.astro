---
import Theme from "./Theme.astro";
---
<Theme/>

<style is:global lang="scss">
  @font-face {
    font-family  : "DistantGalaxy";
    src          : url("/font/UDEVGothic_v1-3-1/UDEVGothicJPDOC-Bold.ttf") format("truetype");
    font-weight  : normal;
    font-style   : normal;
    font-display : swap;
  }

  $minWidth    : 400px;
  $bigWidth    : 1300px;
  $middleWidth : 800px;
  $smallWidth  : 600px;
  @mixin responsive($prop,$def,$big,$middle,$small) {
    $prop : $def;
    @media (max-width : $bigWidth) {
      $prop : $big;
    }
    @media (max-width : $middleWidth) {
      $prop : $middle;
    }
    @media (max-width : $smallWidth) {
      $prop : $small;
    }
  }

  body {
    background-color : var(--mcolor-surface);
    padding          : 0;
    font-family      : "DistantGalaxy", sans-serif;
    line-height      : 1.2;
    min-height       : 100vh;
  }

  p, div {
    width : fit-content;
  }

  div {
    padding : 20px;
  }

  h1 {
    font-size : 2rem;
  }

  h2 {
    font-size : 2rem;
  }

  body, h2, h1 {
    margin : 0;
  }
</style>